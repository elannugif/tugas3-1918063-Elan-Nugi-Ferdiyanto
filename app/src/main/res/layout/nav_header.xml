        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elan Nugi Ferdiyanto"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:layout_width="wrap_content"
